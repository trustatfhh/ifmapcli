<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>

			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>de.hshannover.f4.trust.ifmapcli:common</include>
				<include>de.hshannover.f4.trust.ifmapcli:ar-dev</include>
				<include>de.hshannover.f4.trust.ifmapcli:ar-ip</include>
				<include>de.hshannover.f4.trust.ifmapcli:ar-mac</include>
				<include>de.hshannover.f4.trust.ifmapcli:auth-as</include>
				<include>de.hshannover.f4.trust.ifmapcli:auth-by</include>
				<include>de.hshannover.f4.trust.ifmapcli:cap</include>
				<include>de.hshannover.f4.trust.ifmapcli:dev-attr</include>
				<include>de.hshannover.f4.trust.ifmapcli:dev-char</include>
				<include>de.hshannover.f4.trust.ifmapcli:dev-ip</include>
				<include>de.hshannover.f4.trust.ifmapcli:disc-by</include>
				<include>de.hshannover.f4.trust.ifmapcli:ip-mac</include>
				<include>de.hshannover.f4.trust.ifmapcli:layer2-info</include>
				<include>de.hshannover.f4.trust.ifmapcli:req-inv</include>
				<include>de.hshannover.f4.trust.ifmapcli:pdp</include>
				<include>de.hshannover.f4.trust.ifmapcli:purge</include>
				<include>de.hshannover.f4.trust.ifmapcli:role</include>
				<include>de.hshannover.f4.trust.ifmapcli:search</include>
				<include>de.hshannover.f4.trust.ifmapcli:subscribe</include>
				<include>de.hshannover.f4.trust.ifmapcli:event</include>
				<include>de.hshannover.f4.trust.ifmapcli:perf1</include>
				<include>de.hshannover.f4.trust.ifmapcli:feature</include>
				<include>de.hshannover.f4.trust.ifmapcli:feature2</include>
				<include>de.hshannover.f4.trust.ifmapcli:featureSingle</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>modules/${artifactId}</outputDirectory>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
