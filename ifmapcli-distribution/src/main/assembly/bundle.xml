<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bundle</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>

			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>de.fhhannover.inform.trust.ifmapcli:ar-dev</include>
				<include>de.fhhannover.inform.trust.ifmapcli:ar-ip</include>
				<include>de.fhhannover.inform.trust.ifmapcli:ar-mac</include>
				<include>de.fhhannover.inform.trust.ifmapcli:auth-as</include>
				<include>de.fhhannover.inform.trust.ifmapcli:auth-by</include>
				<include>de.fhhannover.inform.trust.ifmapcli:cap</include>
				<include>de.fhhannover.inform.trust.ifmapcli:dev-attr</include>
				<include>de.fhhannover.inform.trust.ifmapcli:dev-ip</include>
				<include>de.fhhannover.inform.trust.ifmapcli:ip-disc-by</include>
				<include>de.fhhannover.inform.trust.ifmapcli:ip-mac</include>
				<include>de.fhhannover.inform.trust.ifmapcli:layer2-info</include>
				<include>de.fhhannover.inform.trust.ifmapcli:req-inv</include>
				<include>de.fhhannover.inform.trust.ifmapcli:mac-disc-by</include>
				<include>de.fhhannover.inform.trust.ifmapcli:pdp</include>
				<include>de.fhhannover.inform.trust.ifmapcli:purge</include>
				<include>de.fhhannover.inform.trust.ifmapcli:role</include>
				<include>de.fhhannover.inform.trust.ifmapcli:search</include>
				<include>de.fhhannover.inform.trust.ifmapcli:subscribe</include>
				<include>de.fhhannover.inform.trust.ifmapcli:event</include>
				<include>de.fhhannover.inform.trust.ifmapcli:perf1</include>
				<include>de.fhhannover.inform.trust.ifmapcli:feature</include>
				<include>de.fhhannover.inform.trust.ifmapcli:feature2</include>
				<include>de.fhhannover.inform.trust.ifmapcli:featureSingle</include>
			</includes>
			<binaries>
				<outputDirectory>${artifactId}</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>true</includeDependencies>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<dependencySets>
					<dependencySet>
						<unpack>false</unpack>
						<outputDirectory>${artifactId}/lib</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>

	<fileSets>
		<fileSet>
			<directory>${basedir}/../</directory>
			<outputDirectory>${artifactId}</outputDirectory>
			<includes>
				<include>README.txt</include>
				<include>LICENSE.txt</include>
				<include>NOTICE.txt</include>
				<include>CHANGELOG.txt</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/src/main/templates/</directory>
			<outputDirectory>${artifactId}/lib</outputDirectory>
		</fileSet>
	
	</fileSets>
</assembly>
