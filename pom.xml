				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8.2</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>de.hshannover.f4.trust</groupId>
				<artifactId>ifmapj</artifactId>
				<version>2.2.0</version>
			</dependency>
			<dependency>
				<groupId>commons-cli</groupId>
